<li>
    <%= comment.content %> -
    <small>Submitted <%= time_ago_in_words(comment.created_at) %> ago</small>
    <%= form_for [comment, Comment.new] do |f| %>
      <%= f.hidden_field :question_id, :value =>  params[:id] %>
        <%= f.text_area :content, placeholder: "Add a Reply" %><br/>
        <%= f.submit "Reply"  %>
        <% end %>

    <ul>
        <%= render comment.comments %>
    </ul>

  </li>